{% extends 'Admin/Base.twig' %}

{% block content %}
    <div class="aw-content-wrap">
        <form method="post" action="{{ 'admin/spider/start'|generateUrl }}">
            <input type="hidden" name="category_id" value="3">
            <div class="mod">
                <div class="mod-head">
                    <h3>
                        <span class="pull-left">分类编辑</span>
                    </h3>
                </div>
                <div class="tab-content mod-content">
                    <table class="table table-striped">
                        <tbody>
                        <tr>
                            <td>
                                <div class="form-group">
                                    <span class="col-sm-3 col-xs-3 control-label">知乎URL:</span>
                                    <div class="col-sm-9 col-xs-9">
                                        <input type="text" class="form-control" name="url" value="https://www.zhihu.com/search?type=content&q=php">
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    <span class="col-sm-3 col-xs-3 control-label">分类:</span>
                                    <div class="col-sm-9 col-xs-9">
                                        <select name="category_id" class="form-control">
                                            <option value="0">默认</option>
                                            {% for row in category %}
                                                <option value="{{ row.category_id }}">
                                                    {{ row.category_title | raw }}
                                                </option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td>
                                <div class="form-group">
                                    <span class="col-sm-3 col-xs-3 control-label">话题:</span>
                                    <div class="col-sm-9 col-xs-9">
                                        {% for row in topics %}
                                            <label><input type="checkbox" name="topic[]" value="{{ row.topic_id }}">
                                                {{ row.topic_title }}</label>
                                        {% endfor %}
                                    </div>
                                </div>
                            </td>
                        </tr>

                        </tbody><tfoot>
                        <tr>
                            <td>
                                <input type="submit" value="立即采集" class="btn btn-primary center-block">
                            </td>
                        </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </form>
    </div>

{% endblock content %}