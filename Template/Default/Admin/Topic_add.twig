{% extends 'Admin/Base.twig' %}

{% block content %}
    <div class="aw-content-wrap">
        <form enctype="multipart/form-data" method="post" action="{{ 'admin/topic/save'|generateUrl }}">
            <div class="mod">
                <div class="mod-head">
                    <h3>
                        <ul class="nav nav-tabs">
                            <li><a href="{{ 'admin/topic'|generateUrl }}">话题管理</a></li>
                            <li class="active"><a href="javascript:;">新建话题</a></li>
                        </ul>
                    </h3>
                </div>

                <div class="tab-content mod-content">
                    <table class="table table-striped">
                        <tbody><tr>
                            <td>
                                <div class="form-group">
                                    <span class="col-sm-4 col-xs-3 control-label">缩略图:</span>
                                    <div class="col-sm-5 col-xs-8">
                                        <a id="topic_pic_uploader">

                                            <input type="file" class="file-input" name="topic_image" multiple="multiple">

                                            <img name="topic_pic" class="img-polaroid" id="topic_pic" alt="" src="{{ 'Resource/Default'|generateUrl }}/common/topic-mid-img.png">
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td>
                                <div class="form-group">
                                    <span class="col-sm-4 col-xs-3 control-label">话题标题:</span>
                                    <div class="col-sm-5 col-xs-8">
                                        <input type="text" class="form-control" value="" name="topic_title">
                                    </div>
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td>
                                <div class="form-group">
                                    <span class="col-sm-4 col-xs-3 control-label">话题描述:</span>
                                    <div class="col-sm-5 col-xs-8">
                                        <textarea name="topic_description" class="form-control"></textarea>
                                    </div>
                                </div>
                            </td>
                        </tr>

                        </tbody><tfoot>
                        <tr>
                            <td>
                                <input type="submit" class="btn btn-success center-block" value="添加话题">
                            </td>
                        </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </form>
    </div>
{% endblock content %}